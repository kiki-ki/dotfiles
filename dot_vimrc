scriptencoding utf-8

set runtimepath-=~/.vim
set runtimepath^=~/.config/vim

"highlight idegraphic spaces
augroup highlightIdegraphicSpace
  autocmd!
  autocmd Colorscheme * highlight IdeographicSpace ctermbg=0 guibg=#073642
  autocmd VimEnter,WinEnter * call matchadd('IdeographicSpace', '　')
  autocmd VimEnter,WinEnter * call matchadd('IdeographicSpace', '[\u00A0\u2000-\u200B\uFEFF]')
augroup END

"show invisible characters
set list
set listchars=tab:»-,trail:·,extends:»,precedes:«,nbsp:%

"theme
set termguicolors
set background=dark
colorscheme solarized

"display
syntax on
set number
set title
set showmatch
set tabstop=2
set expandtab
set shiftwidth=2
set smartindent
set autoindent
set laststatus=2

"search
set ignorecase
set wrapscan
set smartcase
set incsearch
set hlsearch

"keybind
inoremap <silent> jj <ESC>

nnoremap J 3j
vnoremap J 3j
nnoremap K 3k
vnoremap K 3k

nnoremap H ^
vnoremap H ^
nnoremap L $
vnoremap L $

"clipboard
if has('clipboard')
  set clipboard=unnamed,unnamedplus
endif
