set runtimepath-=~/.vim
set runtimepath^=~/.config/vim

"theme
set termguicolors
let g:gruvbox_contrast_dark = 'hard'
colorscheme gruvbox

"display
syntax on
set number
set title
set showmatch
set tabstop=2
set expandtab
set shiftwidth=2
set smartindent
set autoindent
set laststatus=2

"search
set ignorecase
set wrapscan
set smartcase
set incsearch
set hlsearch

"keybind
inoremap <silent> jj <ESC>

nnoremap J 3j
vnoremap J 3j
nnoremap K 3k
vnoremap K 3k

nnoremap H ^
vnoremap H ^
nnoremap L $
vnoremap L $

vnoremap y "+y
nnoremap p "+p
vnoremap P "+P
