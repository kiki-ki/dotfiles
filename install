#! /usr/bin/env sh

set -eu

if [ "$(sudo echo hi)" != hi ]; then
  echo "Cannot use sudo."
else
  sudo apt-get update && sudo apt-get install -y \
    awscli \
    build-essential \
    curl \
    file \
    git \
    grep \
    jq \
    less \
    procps \
    vim \
    zsh \
    openssh-server

  # setting for sshd
  sudo mkdir /var/run/sshd
  sudo /usr/sbin/sshd

  # install other tools
  sh -c "$(curl -fsLS get.chezmoi.io)"
fi

